@model ZalaBahceV1.Models.Markalar

@using (Html.BeginForm("_MarkaEkle", "Diger", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
{


    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-2"><dt>Marka Adını Giriniz : </dt></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.markaAd, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-2"><dt>Marka Fotoğrafı : </dt></div>
            <div class="col-md-10">
                <input type="file" name="markaResim" id="markaResim" class="form-control" />

            </div>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-10">


            </div><div class="col-md-2">
                <input type="submit" value="Ekle" class="btn btn-primary btn-lg col-md-12" />
            </div>
        </div>


    </div>}
