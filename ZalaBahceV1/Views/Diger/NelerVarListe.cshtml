
@{
    ViewBag.Title = "NelerVarListe";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}


@section Baslik{ SİZİ NE BEKLİYOR AYARLARI }
@section sitemap{SİZİ NE BEKLİYOR AYARLARI }
@section title{SİZİ NE BEKLİYOR AYARLARI }
@model IEnumerable<ZalaBahceV1.Models.NelerVar>
<div class="row">

    <div class="col-md-12">
        <div class="card card-info card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    SİZİ NE BEKLİYOR LİSTESİ
                    <small>Düzenleme İşlemleri Buradan Yapılır</small>
                </h3>
                <!-- tools box -->
                <div class="card-tools">
                    <button type="button" class="btn btn-tool btn-sm"
                            data-widget="collapse"
                            data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                  
                </div>
                <!-- /. tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="mb-3">

                    @*------------content start------------*@


                    <table id="urunkatliste" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th width="5%">ID</th>
                                <th width="15%">Başlık</th>
                                <th width="41%">Aciklama</th>
                                <th width="33%">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {


                                <tr>
                                    <td>@i.ID</td>
                                    <td>@i.baslik </td>
                                    <td>@i.aciklama</td>

                                    <td align="center">
                                        <div class="btn-group">
                                            <a href="/Diger/NelerVarDuzenle?ID=@i.ID" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i>Düzenle</a>
                                        </div>
                                    </td>




                                </tr>  }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th width="5%">ID</th>
                                <th width="15%">Başlık</th>
                                <th width="41%">Aciklama</th>
                                <th width="33%">İşlem</th>

                            </tr>
                        </tfoot>
                    </table>
                    @*--------------content end--------------*@
                </div>
                <p class="text-sm mb-0">

                </p>
            </div>
        </div>

        @*------------card end----------------*@
    </div>
</div>



@*------------card end----------------*@