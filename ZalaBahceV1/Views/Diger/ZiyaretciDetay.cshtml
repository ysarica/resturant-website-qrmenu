
@{
    ViewBag.Title = "ZiyaretciDetay";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}
@model IEnumerable<ZalaBahceV1.Models.Sayac>
@section Baslik{ ZİYARETÇİ İSTATİSTİK}
@section sitemap{ZİYARETÇİ İSTATİSTİK }
@section title{ZİYARETÇİ İSTATİSTİK }
<div class="row">

    <div class="col-md-12">
        <div class="card card-info card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    ZİYARETÇİ GÜNLÜK İSTATİSTİK
                    <small>Site Aktif Olduğu Günden İtibaren Listelenmektedir</small>
                </h3>
                <!-- tools box -->
                <div class="card-tools">
                    <button type="button" class="btn btn-tool btn-sm"
                            data-widget="collapse"
                            data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <!-- /. tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="mb-3">

                    @*------------content start------------*@


                    <table id="urunkatliste" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th width="15%">ID</th>
                                <th width="15%">Tarih</th>
                                <th width="5%">Ziyaretçi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                             
                                <tr>
                                    <td>@i.SID</td>
                                    <td>@(i.gün + "." + i.ay + "." + i.yil)</td>
                                    <td>@i.sayi</td>

                                </tr> } 

                        </tbody>
                        <tfoot>
                            <tr>
                                <th width="15%">ID</th>
                                <th width="15%">Tarih</th>
                                <th width="5%">Ziyaretçi</th>
                            </tr>
                        </tfoot>
                    </table>
                    @*--------------content end--------------*@
                </div>
                <p class="text-sm mb-0">

                </p>
            </div>
        </div>

        @*------------card end----------------*@
    </div>
</div>
<div class="row">
    <div class="col-12">@Html.Action("_ZiyaretciBilgi", "Diger")</div>
    <div class="col-12">@Html.Action("_ZiyaretçiGünlük", "Diger")</div>
    <div class="col-6">@Html.Action("_ZiyaretçiAylik", "Diger")</div>
    <div class="col-6">@Html.Action("_ZiyaretçiYillik", "Diger")</div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card card-danger">
            <div class="card-header">
                <h4 class="card-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" class="collapsed" aria-expanded="false">
                        Tüm İstatistikler Buradan Sıfırlanır Geri Alınamaz!
                    </a>
                </h4>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse" style="">
                <div class="card-body">
                    <p class="text-danger">Eğer İstatistikleri Silerseniz Bir Daha Geri Alamazsınız!</p><br />
                    <div class="col-12">
                        <a href="/Diger/IstatistikSifirla" class="btn btn-block btn-danger btn-lg">İSTATİSTİKLERİ SIFIRLA</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>