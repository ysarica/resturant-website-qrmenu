
@{
    ViewBag.Title = "NelerVarDuzenle";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}

@section Baslik{ SİZİ NE BEKLİYOR AYARLARI }
@section sitemap{SİZİ NE BEKLİYOR DÜZENLE }
@section title{SİZİ NE BEKLİYOR DÜZENLE }
@model ZalaBahceV1.Models.NelerVar



<div class="col-md-12">
    <div class="card card-warning card-outline">
        <div class="card-header">
            <h3 class="card-title">
                SİZİ NE BEKLİYOR DÜZENLE
            </h3>
            <!-- tools box -->
            <div class="card-tools">
                <button type="button" class="btn btn-tool btn-sm"
                        data-widget="collapse"
                        data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>

            </div>
            <!-- /. tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            @*------------content start------------*@





            @using (Html.BeginForm("NelerVarDuzenle", "Diger", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    <div class="row">
                        <div class="col-md-2"><dt> Adını Giriniz : </dt></div>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.baslik, new { htmlAttributes = new { @class = "form-control btn-block" } })
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-2"><dt>Açıklama Giriniz : </dt></div>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.aciklama, new { htmlAttributes = new { @class = "form-control btn-block" } })
                        </div>
                    </div>
                    <hr />
              
                   
                        <div class="col-md-2">
                            <input type="submit" value="Güncelle" class="btn btn-primary btn-lg col-md-12" />
                        </div>
                    </div>
              
            }

            <div>
            </div>

            @*--------------content end--------------*@

        </div>
    </div>
    </div>
    @*------------card end----------------*@
