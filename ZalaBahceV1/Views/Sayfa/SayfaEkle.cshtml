
@{
    ViewBag.Title = "SayfaEkle";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}

@section Baslik{ SAYFA EKLE  }
@section sitemap{SAYFA EKLE  }
@section title{SAYFA AYARLARI }
@model ZalaBahceV1.Models.Sayfalar


<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    SAYFA  EKLE
                </h3>
                <!-- tools box -->
                <div class="card-tools">
                    <button type="button" class="btn btn-tool btn-sm"
                            data-widget="collapse"
                            data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                  
                </div>
                <!-- /. tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                @*<div class="mb-3">*@

                @*------------content start------------*@


                @using (Html.BeginForm("SayfaEkle", "Sayfa", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-2"><dt>Sayfa Yerleştirme: </dt></div>
                            <div class="col-md-10">
                                <select id="yer" name="yer" class="form-control">
                                    <option value="0">Seçiniz</option>
                                    <option value="ekleme">Menüye Ekleme</option>
                                    <option value="altmenu">Alt Menuye Ekle</option>
                                    <option value="ustmenu">Üst Menüye Ekle</option>

                                </select>
                            </div>
                        </div>
                        <hr />

                        <div class="row">
                            <div class="col-md-2"><dt>Sayfa Başlık: </dt></div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.baslik, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <hr />

                        <div class="row">
                            <div class="col-md-2"><dt>Sayfa Slogan: </dt></div>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.baslik2, new { htmlAttributes = new { @class = "form-control" } })

                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-2"><dt>Kapak Foroğrafı Seçiniz : </dt></div>
                            <div class="col-md-10">
                                <input type="file" name="resim" id="resim" class="form-control" />

                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-2"><dt>Sayfa İçeriği: </dt></div>
                            <div class="col-md-10">
                                <textarea id="icerik" name="icerik" style="width: 100%" placeholder="Sayfa İçeriği Buraya Giriniz"></textarea>


                            </div>
                        </div>
                        <hr />




                        <div class="row">
                            <div class="col-md-10"></div>
                            <div class="col-md-2">
                                <input type="submit" value="Sayfa Ekle" class="btn btn-primary btn-lg col-md-12" />
                            </div>
                        </div>
                        <hr />

                        <hr />
                    

                }

                <div>
                    @Html.ActionLink("Listeye geri dön", "SayfaListele")
                </div>


                @*--------------content end--------------*@
                @*</div>*@

            </div>
        </div>
    </div>
</div>
@section script{
    <script>
            $(function () {

                ClassicEditor
                .create(document.querySelector('#icerik'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                })
            })
    </script>


}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@*------------card end----------------*@