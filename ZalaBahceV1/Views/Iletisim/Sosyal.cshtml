
@{
    ViewBag.Title = "Sosyal";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}

@section Baslik{ SOSYAL MEDYA AYARLARI }
@section sitemap{SOSYAL MEDYA  }
@section title{SOSYAL MEDYA  }
@model IEnumerable<ZalaBahceV1.Models.Sosyal>


<div class="row">

    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    SOSYAL MEDYA LİSTESİ
                    <small>Ekleme ve Silme İşlemleri Buradan Yapılır</small>
                </h3>
                <!-- tools box -->
                <div class="card-tools">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#SHEkle"><i class="fa fa-plus"></i> Sosyal Hesap Ekle</button>
                </div>
                <!-- /. tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="mb-3">

                    @*------------content start------------*@


                    <table id="urunkatliste" class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th width="5%">ID</th>
                                <th width="15%">AD</th>
                                <th width="5%">LİNK</th>
                                <th width="41%">İCON</th>
                                <th width="33%">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var s in Model)
                            {
                                <tr>
                                    <td>@s.SID</td>
                                    <td>@s.ad </td>
                                    <td>@s.link</td>
                                    <td>@s.icon</td>

                                    <td align="center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#SosyalDuzenle-@s.SID"><i class="fa fa-pencil-square"></i> Düzenle</button>
                                            <a id="btnAlert" href="/Iletisim/SosyalSil?SID=@s.SID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
                                        </div>
                                    </td>
                                </tr>

                                <div class="modal fade bd-example-modal-lg" id="SosyalDuzenle-@s.SID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">@s.ad Duzenle</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            @using (Html.BeginForm("_SosyalDuzenle", "Iletisim", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
                                            {<input type="text" style="display:none;" class="form-control" id="SID" name="SID" value="@s.SID">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>Medya Adı:</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                                                            </div>
                                                            <input type="text" class="form-control" placeholder="Medya Adı" id="ad" name="ad" value="@s.ad">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Link:</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                                                            </div>
                                                            <input type="text" class="form-control" placeholder="Link (URL)" id="link" name="link" value="@s.link">
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Icon:</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                                                            </div>
                                                            <input type="text" class="form-control" placeholder="İcon" id="icon" name="icon" value="@s.icon">
                                                        </div>
                                                    </div>



                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Çık</button>
                                                    <button type="submit" class="btn btn-warning">Güncelle</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                            }



                        </tbody>
                        <tfoot>
                            <tr>
                                <th width="5%">ID</th>
                                <th width="15%">AD</th>
                                <th width="5%">LİNK</th>
                                <th width="41%">İCON</th>
                                <th width="33%">İşlem</th>

                            </tr>
                        </tfoot>
                    </table>
                    @*--------------content end--------------*@
                </div>
                <p class="text-sm mb-0">

                </p>
            </div>
        </div>

        @*------------card end----------------*@
    </div>
</div>


@*------------card end----------------*@

<div class="modal fade bd-example-modal-lg" id="SHEkle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Sosyal Hesap Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("_SosyalEkle", "Iletisim", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <label>Medya Adı:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Medya Adı" id="ad" name="ad">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Link:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Link (URL)" id="link" name="link">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Icon:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="İcon" id="icon" name="icon">
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Çık</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            }
        </div>
    </div>
</div>
