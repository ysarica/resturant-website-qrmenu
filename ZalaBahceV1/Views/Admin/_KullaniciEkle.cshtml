@model ZalaBahceV1.Models.Kullanici

@using (Html.BeginForm("_KullaniciEkle", "Admin", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
{


    <div class="form-horizontal">
      
            <div class="alert alert-warning alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fa fa-ban"></i> Uyarı!</h5>
                Girdiginiz Mail Adresi Veya Kullanici Adi Daha Önce Kullanılmış İse Kayıt Yapılmaz
            </div>
        

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-2"><dt>Ad Soyad Giriniz: </dt></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.adsoyad, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-2"><dt>Kullanici Adi Giriniz: </dt></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ka, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-2"><dt>Şifre Giriniz: </dt></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pw, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-2"><dt>Mail Giriniz: </dt></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-2"><dt>Yetki Tipini Giriniz: </dt></div>
            <div class="col-md-10">
                <select class="form-control" name="yetki" id="yetki">
                    <option value="Personel">Personel</option>
                    <option value="Yetkili">Yetkili</option>
                </select>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">


            </div><div class="col-md-2">
                <input type="submit" value="Ekle" class="btn btn-primary btn-lg col-md-12" />
            </div>
        </div>


    </div>}

