@model ZalaBahceV1.Models.UrunKategori
@{
    ViewBag.Title = "KategoriDuzenle";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}

@section Baslik{ KATEGORİ AYARLARI }
@section sitemap{KATEGORİ DÜZENLE }
@section title{KATEGORİ DÜZENLE }



<div class="col-md-12">
    <div class="card card-warning card-outline">
        <div class="card-header">
            <h3 class="card-title">
                URUN KATEGORİ DÜZENLE
            </h3>
            <!-- tools box -->
            <div class="card-tools">
                <button type="button" class="btn btn-tool btn-sm"
                        data-widget="collapse"
                        data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
              
            </div>
            <!-- /. tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            @*------------content start------------*@





@using (Html.BeginForm("KategoriDuzenle", "Admin", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.kategoriID)

                    <div class="row">
                        <div class="col-md-2"><dt>Kategori Adını Giriniz : </dt></div>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.baslik, new { htmlAttributes = new { @class = "form-control btn-block" } })
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-2"><dt>Kategori Açıklama Giriniz : </dt></div>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.aciklama, new { htmlAttributes = new { @class = "form-control btn-block" } })
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-2"><dt>Kategori Kapak Fotoğrafı Giriniz : </dt></div>

                        <div class="col-md-10">
                            <input type="file" name="resim" id="resim" class="form-control" />
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class=" col-md-10">


                    </div>
                    <div class="col-md-2">
                        <input type="submit" value="Güncelle" class="btn btn-primary btn-lg col-md-12" />
                    </div>
                </div>
            </div>
            }

            <div>
            </div>

            @*--------------content end--------------*@

        </div>
    </div>

    @*------------card end----------------*@


