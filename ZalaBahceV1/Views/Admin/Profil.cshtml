
@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}

@section Baslik{ PROFİL GÜNCELLE }
@section sitemap{PROFİL GÜNCELLE }
@section title{PROFİL GÜNCELLE }
@model ZalaBahceV1.Models.Kullanici

           <div class="row">
    <div class="col-md-3 col-sm-6 col-12">
        <div class="info-box">
            <span class="info-box-icon bg-info"><i class="fa fa-calendar"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Son Giriş</span>
                <span class="info-box-number">@Model.songiris</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->
    <div class="col-md-3 col-sm-6 col-12">
        <div class="info-box">
            <span class="info-box-icon bg-success"><i class="fa fa-flag-o"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Yetki Türü</span>
                <span class="info-box-number">@Model.yetki</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
    <!-- /.col -->

               @if (Model.yetki == "Yetkili")
               {
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="info-box">
                        <a class="info-box-icon bg-warning " href="/Admin/Kullanici"><i class="fa fa-users"></i></a>

                        <div class="info-box-content">
                            <span class="info-box-text">Kullanıcı Ayarları</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
               <!-- /.col -->
                <div class="col-md-3 col-sm-6 col-12">
                    <div class="info-box">
                        <a class="info-box-icon bg-danger " href="/Diger/Log"><i class="fa fa-database"></i></a>

                        <div class="info-box-content">
                            <span class="info-box-text">LOG</span>
                        </div>
                        <!-- /.info-box-content -->
                    </div>
                    <!-- /.info-box -->
                </div>
               }

               
</div>
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Profil Ayarları</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
             @using (Html.BeginForm("Profil", "Admin", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                <div class="card-body">
                  

                    @*Ad Soyad*@
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ad Soyad</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-ticket"></i></span>
                            </div>
                            <input  class="form-control" placeholder="Email" name="adsoyad" value="@Model.adsoyad">
                        </div>
                    </div>
                    @*Kullanıcı Adı*@
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kullanıcı Adı</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input   class="form-control" placeholder="Email" name="ka" value="@Model.ka">
                        </div>
                    </div>
                    @*Şifre*@
                    <div class="form-group">
                        <label for="exampleInputEmail1">Şifre</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" placeholder="Email" name="pw" value="@Model.pw">
                        </div>
                    </div>
                    @*Mail*@
                    <div class="form-group">
                        <label for="exampleInputEmail1">Mail</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                            </div>
                            <input type="email" class="form-control" placeholder="Email" name="mail" value="@Model.mail">
                        </div>
                    </div>

                </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                        </div>
             }
                </div>

            

            