
@{
    ViewBag.Title = "urunDuzenle";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}
@model ZalaBahceV1.Models.Urun
@section Baslik{ URUN DUZENLE }
@section sitemap{URUN DUZENLE }
@section title{URUN DUZENLE}

@using (Html.BeginForm("urunDuzenle", "Urun", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="row">
        <div class="col-md-12">
            <div class="card card-warning card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        URUN DÜZENLE
                    </h3>
                    <!-- tools box -->
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool btn-sm"
                                data-widget="collapse"
                                data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        @*<button type="button" class="btn btn-tool btn-sm"
                                    data-widget="remove"
                                    data-toggle="tooltip"
                                    title="Remove">
                                <i class="fa fa-times"></i>
                            </button>*@
                    </div>
                    <!-- /. tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    @*<div class="mb-3">*@

                    @*------------content start------------*@


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.urunID)

                    <div class="row">
                        <div class="col-md-2"><dt>Ürün Kategori: </dt></div>

                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.katID, ViewBag.Kategoriler as IEnumerable<SelectListItem>, "Kategori Seçiniz", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.katID, "", new { @class = "text-danger" })


                        </div>

                        @*<div class="col-md-10">
                                @Html.DropDownList("KatID", ViewBag.kategoris as IEnumerable<SelectListItem>, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.UrunKategori, "", new { @class = "text-danger" })
                            </div>*@
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-2"><dt>Ürün Ad: </dt></div>

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.urunAd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.urunAd, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <hr />

                    <div class="row">
                        <div class="col-md-2"><dt>Ürün Özet Açıklaması: </dt></div>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.aciklamaOzet, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-2"><dt>Kapak Foroğrafı Seçiniz : </dt></div>
                        <div class="col-md-10">
                            <input type="file" name="resim" id="resim" class="form-control" />

                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-2"><dt>Ürün Açıklaması: </dt></div>
                        <div class="col-md-10">
                            <textarea id="aciklama" name="aciklama" style="width: 100%">@Model.aciklama</textarea>


                        </div>
                    </div>
                    <hr />


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Güncelleştir" class="btn btn-warning btn-lg" />
                        </div>
                    </div>
                    @*--------------content end--------------*@
                    @*</div>*@

                </div>
            </div>
        </div>
    </div>

    @*------------card end----------------*@

}

<div>
    @Html.ActionLink("LİSTEYE GERİ DÖN", "Index")
</div>
@section script{
    <script>
            $(function () {

                ClassicEditor
                .create(document.querySelector('#aciklama'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                })
            })
    </script>


}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>