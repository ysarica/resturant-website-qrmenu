
@{
    ViewBag.Title = "Hosgeldiniz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ZalaBahceV1.Models.DegerlendirmeFormu
<section class="s-video-v2__bg" data-vidbg-bg="mp4: /Resim/Genel/menu11.mp4, webm: /Resim/Genel/menu.mweb, poster: /Resim/Genel/menu.jpg" data-vidbg-options="loop: true, muted: true, overlay: false">
    <div class="container g-position--overlay g-text-center--xs">
        <div class="g-padding-y-50--xs g-margin-t-100--xs g-margin-b-100--xs g-margin-b-250--md">
            <h1 class="g-font-size-36--xs g-font-size-50--sm g-font-size-60--md g-color--white">Memnuniyet Anketi</h1>

            <!-- Form -->
            <div class="container g-bg-color--white g-box-shadow__dark-lightest-v3">
                <div class="row">
                    <!-- Form -->
                    <div class="col-md-12 js__form-eqaul-height-v1">
                        <div class="g-padding-x-40--xs g-padding-y-50--xs">
                            @using (Html.BeginForm("Hosgeldiniz", "Memnuniyet", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                    <div class="col-sm-6 g-margin-b-30--xs g-margin-b-0--md">
                                        @Html.EditorFor(model => model.adsoyad, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "* Ad Soyad" } })
                                        @Html.ValidationMessageFor(model => model.adsoyad, "", new { @style = "color:red" })

                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "* Mail" } })
                                        @Html.ValidationMessageFor(model => model.mail, "", new { @style = "color:red" })


                                    </div>
                                </div>
                                <div class="row g-margin-b-50--xs g-margin-b-50--md">
                                    <div class="col-sm-6 g-margin-b-30--xs g-margin-b-0--md">
                                        @Html.EditorFor(model => model.tel, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "* Telefon" } })
                                        @Html.ValidationMessageFor(model => model.tel, "", new { @style = "color:red" })




                                    </div>

                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.adres, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "Adres (İl/İlçe)" } })
                                        @Html.ValidationMessageFor(model => model.adres, "", new { @style = "color:red" })

                                    </div>
                                </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                          Sizi Nasıl Karşıladık (1-5 Arasında Bizi Puanlarmısınız)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md">
                                            <select id="karşılama" name="karşılama" class="form-control">
                                                <option value="5">5</option>
                                                <option value="4">4</option>
                                                <option value="3">3</option>
                                                <option value="2">2</option>
                                                <option value="1">1</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Personelimizden Memnun Kaldınızmı (1-5 Arasında Bizi Puanlarmısınız)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md">
                                            <select id="personel" name="personel" class="form-control">
                                                <option value="5">5</option>
                                                <option value="4">4</option>
                                                <option value="3">3</option>
                                                <option value="2">2</option>
                                                <option value="1">1</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Hijyen ve Temizlik Konusunda Nasıldık ? (1-5 Arasında Bizi Puanlarmısınız)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md">
                                            <select id="temizlik" name="temizlik" class="form-control">
                                                <option value="5">5</option>
                                                <option value="4">4</option>
                                                <option value="3">3</option>
                                                <option value="2">2</option>
                                                <option value="1">1</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Aldıgınız Hizmet Ödediğiniz Ücreti Hak Ediyormu ? (1-5 Arasında Bizi Puanlarmısınız)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md">
                                            <select id="ücret" name="ücret" class="form-control">
                                                <option value="5">5</option>
                                                <option value="4">4</option>
                                                <option value="3">3</option>
                                                <option value="2">2</option>
                                                <option value="1">1</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Zala Bahçenin Tasarımını Beğendinizmi ? (1-5 Arasında Bizi Puanlarmısınız)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md">
                                            <select id="mekan" name="mekan" class="form-control">
                                                <option value="5">5</option>
                                                <option value="4">4</option>
                                                <option value="3">3</option>
                                                <option value="2">2</option>
                                                <option value="1">1</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Genel Olarak Zala Bahçeyi Nasıl Buldunuz ?  (1-5 Arasında Bizi Puanlarmısınız)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md">
                                            <select id="resturantgenel" name="resturantgenel" class="form-control">
                                                <option value="5">5</option>
                                                <option value="4">4</option>
                                                <option value="3">3</option>
                                                <option value="2">2</option>
                                                <option value="1">1</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Tekrar Zala Bahçe'ye Gelmeyi Düşünürmüsünüz  (Evet veya Hayır)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md">
                                            <select id="tekrargelmek" name="tekrargelmek" class="form-control">
                                                <option value="Evet">Evet</option>
                                                <option value="Hayır">Hayır</option>
                                               
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Zala Bahçeyi Bir Başkasına Tavsiye Edermisiniz ?  (Evet veya Hayır)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md" >
                                            <select id="tavsiye" name="tavsiye"class="form-control">
                                                <option value="Evet">Evet</option>
                                                <option value="Hayır">Hayır</option>

                                            </select>
                                        </div>
                                    </div>
                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-9">
                                            Web Sitemizi Yeterli Buldunuzmu ?  (1-5 Arasında Bizi Puanlarmısınız)
                                        </div>
                                        <div class="col-sm-3 g-margin-b-30--xs g-margin-b-0--md" >
                                            <select id="ulasim" name="ulasim"class="form-control">
                                                <option value="5">5</option>
                                                <option value="4">4</option>
                                                <option value="3">3</option>
                                                <option value="2">2</option>
                                                <option value="1">1</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-6">
                                            Zala Bahçe'yi Nereden Duydunuz:
                                        </div>
                                        <div class="col-sm-6 g-margin-b-30--xs g-margin-b-0--md" >
                                           @Html.EditorFor(model => model.nerdenduydun, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "" } })
                                        @Html.ValidationMessageFor(model => model.nerdenduydun, "", new { @style = "color:red" })
                                        </div>
                                    </div>

                                    <div class="g-margin-b-50--xs">
                                        <textarea id="aciklama" name="aciklama" class="form-control s-form-v4__input g-padding-l-0--xs " rows="5" placeholder="* Eklemek İstediğiniz Birşey Varmı?"></textarea>
                                    </div>
                     

                                        <div class="g-text-center--xs">
                                            <input type="submit" value="Gönder" class="text-uppercase s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-70--xs g-margin-b-20--xs" />

                                        </div>
                            }
                        </div>
                    </div>
                    <!-- End Form -->
                    <!-- Contacts -->
                    <!-- End Contacts -->
                </div>
            </div>

            <!-- End Form -->



        </div>
    </div>
</section>



