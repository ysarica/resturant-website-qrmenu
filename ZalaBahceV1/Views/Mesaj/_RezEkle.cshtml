<button type="button" class="btn btn-primary btn-block mb-3" data-toggle="modal" data-target="#RezEkle">Rezervasyon Ekle</button>

<div class="modal fade bd-example-modal-lg" id="RezEkle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Rezervasyon Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("_RezEkle", "Mesaj", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label>Adı Soyadı:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check"></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Adı Soyadı" id="adsoyad" name="adsoyad">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Hizmet:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check"></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Alınacak Hizmet" id="hizmet" name="hizmet">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Tarih:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check"></i></span>
                                    </div>
                                    <input type="date" class="form-control" placeholder="dd-mm-yyyy" id="pTarih" name="pTarih">
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label>Telefon:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check"></i></span>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Telefon Numarası" id="telefon" name="telefon">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kişi Sayısı:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check"></i></span>
                                    </div>
                                    <input type="number" class="form-control" placeholder="Kişi" id="kisi" name="kisi">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Saat:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check"></i></span>
                                    </div>
                                    <input type="time" class="form-control" placeholder="Saat" id="pSaat" name="pSaat">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label>Not:</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-check"></i></span>
                                    </div>
                                    <textarea type="text" class="form-control" placeholder="Rezervasyon Notu" id="aciklama" name="aciklama"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Çık</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            }
        </div>
    </div>
</div>

