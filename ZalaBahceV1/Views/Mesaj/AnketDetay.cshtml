@model  ZalaBahceV1.Models.DegerlendirmeFormu



<div class="col-md-12">
    <!-- Widget: user widget style 1 -->
    <div class="card card-widget widget-user">
        <!-- Add the bg color to the header using any of the bg-* classes -->
        <div class="widget-user-header text-white" style="background: url('/dist/img/photo1.png') center center;">
            <h3 class="widget-user-username">Adı Soyadı: @Model.adsoyad</h3>
            <h5 class="widget-user-desc">Mesaj Konusu: @Model.tarih</h5>
        </div>
        <div class="widget-user-image">
            <img class="img-circle" src="/Resim/Genel/logoaga%c3%a7.fw.png" alt="User Avatar">
        </div>
        <div class="card-footer">
            <div class="alert alert-info alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fa fa-info"></i> Bilgilendirme!</h5>
                Görüntülediğiniz Anket - @Model.tarih - Gönderilmiştir
            </div>
            @if (Model.okundu == "0")
            {
                <div class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-warning"></i> Uyarı!</h5>
                    Görüntülediğiniz Anket Okunmamıştır. Anketi Onaylayınız!
                </div>
            }
            else if (Model.okundu == "1")
            {
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-check"></i> Bilgilendirme!</h5>
                    Görüntülediğiniz Anket Okunmuştur Bilgiler Alt Bölümlerde Yer Almaktadır
                </div>
            }

