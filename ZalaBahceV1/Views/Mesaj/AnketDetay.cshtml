<div class="col-md-12">
    <div class="card card-warning card-outline">
        <div class="card-header">
            <h3 class="card-title">Müşterinin Profili</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
            <!-- /.card-tools -->
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Müşterinin Daha Önceki Rezervasyonları</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <table class="table table-condensed">
                                <tbody>
                                    <tr>
                                        <th>Hizmet</th>
                                        <th>Tarih</th>
                                        <th>Kişi Sayısı</th>
                                        <th style="width: 40px">Git</th>
                                    </tr>
                                    @foreach (var a in ViewBag.oncekirez)
                                    {
                                        <tr>
                                            <td>@a.hizmet</td>
                                            <td>@a.tarih</td>
                                            <td>@a.kisi </td>
                                            <td><a href="/Mesaj/RezervasyonDetay?RezID=@a.RezID" class="btn btn-default">Rezervasyona Git</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>


                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Müşterinin Daha Önceki Mesajları</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <table class="table table-condensed">
                                <tbody>
                                    <tr>
                                        <th>Konu</th>
                                        <th>Tarih</th>

                                        <th style="width: 40px">Git</th>
                                    </tr>
                                    @foreach (var a in ViewBag.oncekimesaj)
                                    {
                                        <tr>
                                            <td>@a.konu</td>
                                            <td>@a.tarih</td>

                                            <td><a href="/Mesaj/MesajDetay?MID=@a.MID" class="btn btn-default">Mesaja Git</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
            </div>

        </div>
        <!-- /.card-body -->
    </div>
