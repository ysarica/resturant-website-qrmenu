
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ZalaBahceV1.Models.Rezervasyon
 
<section class="s-video-v2__bg" data-vidbg-bg="mp4: /Resim/Genel/menu11.mp4, webm: /Resim/Genel/menu.mweb, poster: /Resim/Genel/menu.jpg" data-vidbg-options="loop: true, muted: true, overlay: false">
    <div class="container g-position--overlay g-text-center--xs">
        <div class="g-padding-y-50--xs g-margin-t-100--xs g-margin-b-100--xs g-margin-b-250--md">
            <h1 class="g-font-size-36--xs g-font-size-50--sm g-font-size-60--md g-color--white">Rezervasyon & Talep</h1>

            <!-- Form -->
            <div class="container g-bg-color--white g-box-shadow__dark-lightest-v3">
                <div class="row">
                    <!-- Form -->
                    <div class="col-md-12 js__form-eqaul-height-v1">
                        <div class="g-padding-x-40--xs g-padding-y-50--xs">
@using (Html.BeginForm("Index", "Rezervasyon", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
{
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                    <div class="col-sm-6 g-margin-b-30--xs g-margin-b-0--md">
                                        @Html.EditorFor(model => model.adsoyad, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "* Ad Soyad" } })
                                        @Html.ValidationMessageFor(model => model.adsoyad, "", new { @style = "color:red" })

                                    </div>
                                    <div class="col-sm-6">
                                        @Html.EditorFor(model => model.mail, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "* Mail" } })
                                        @Html.ValidationMessageFor(model => model.mail, "", new { @style = "color:red" })


                                    </div>
                                </div>
                                    <div class="row g-margin-b-50--xs g-margin-b-50--md">
                                        <div class="col-sm-6 g-margin-b-30--xs g-margin-b-0--md">
                                            @Html.EditorFor(model => model.telefon, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "* Telefon" } })
                                            @Html.ValidationMessageFor(model => model.telefon, "", new { @style = "color:red" })




                                        </div>
                                       
                                        <div class="col-sm-6">
                                            @Html.EditorFor(model => model.adres, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "Adres (İl/İlçe)" } })
                                            @Html.ValidationMessageFor(model => model.adres, "", new { @style = "color:red" })

                                        </div>
                                    </div>



                                    <div class="row g-margin-b-50--xs g-margin-b-50--md">
                                        <p> **Lütfen Tarih Ve Saat Seçiniz</p>
                                    </div>



                                    <div class="row g-margin-b-50--xs g-margin-b-50--md">
                                        <div class="col-sm-6 g-margin-b-30--xs g-margin-b-0--md">

                                            <input type="date" id="pTarih" name="pTarih" class="form-control s-form-v4__input g-padding-l-0--xs"
                                                   min="@DateTime.Now.ToLongDateString()" max="2030-12-31">


                                        </div>

                                        <div class="col-sm-6">
                                            <input type="time" id="pSaat" name="pSaat" min="08:00" max="22:00" required class= "form-control s-form-v4__input g-padding-l-0--xs" >

                                        </div>
                                    </div>

                                    <div class="row g-margin-b-30--xs g-margin-b-50--md">
                                        <div class="col-sm-6">
                                           
                                            <select name="hizmet" id="hizmet" class="form-control s-form-v4__input g-padding-l-0--xs" >
                                                <option value="-1">Lütfen Bir Hizmet Türü Seçiniz</option>
                                                @foreach (var h in ViewBag.hizmetler)
                                                {

                                                    <option value="@h.ad">@h.ad</option>

                                                }
                                            </select>
</div>
                                        <div class="col-sm-6 g-margin-b-30--xs g-margin-b-0--md">
                                            @Html.EditorFor(model => model.kisi, new { htmlAttributes = new { @class = "form-control s-form-v4__input g-padding-l-0--xs", placeholder = "* Kişi Sayısı" } })
                                            @Html.ValidationMessageFor(model => model.kisi, "", new { @style = "color:red" })

                                        </div>
                                      
                                    </div>
                                    
                                    <div class="g-margin-b-50--xs">
                                        <textarea id="mesaj" name="mesaj" class="form-control s-form-v4__input g-padding-l-0--xs " rows="5" placeholder="* Mesajınız"></textarea>
                                    </div>
                                   
                                    <div class="g-text-center--xs">
                                        <input type="submit" value="Gönder" class="text-uppercase s-btn s-btn--md s-btn--primary-bg g-radius--50 g-padding-x-70--xs g-margin-b-20--xs" />

                                    </div>
                            }
                        </div>
                    </div>
                    <!-- End Form -->
                    <!-- Contacts -->
                   
                    <!-- End Contacts -->
                </div>
            </div>

            <!-- End Form -->



        </div>
    </div>
</section>


