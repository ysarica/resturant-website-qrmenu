
@{
    ViewBag.Title = "CCListe";
    Layout = "~/Views/Shared/_ZalaAdmin.cshtml";
}

@section Baslik{ CC MAİL }
@section sitemap{CC MAİL }
@section title{CC MAİL }
@model IEnumerable<ZalaBahceV1.Models.CCMail>
<div class="row">
    <div class="col-md-3">
        @Html.Action("_Menu", "Mail")

    </div>
    <div class="col-md-9">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    CC MAİL
                    <small>Düzenleme ve Silme İşlemleri Buradan Yapılır</small>
                </h3>
                <!-- tools box -->
                <div class="card-tools">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CCEkle"><i class="fa fa-plus"></i> CC Mail Ekle</button>
                   

                </div>
                <!-- /. tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="mb-3">

                    @*------------content start------------*@


                    <table id="urunkatliste" class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th width="5%">ID</th>
                                <th width="15%">Ad Soyad</th>
                                <th width="5%">Mail</th>
                                <th width="33%">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {


                                <tr>
                                    <td>@i.ID</td>
                                    <td>@i.Adsoyad </td>
                                    <td>@i.mail</td>

                                    <td align="center">
                                        <div class="btn-group">
                                            <a id="btnAlert" href="/Mail/CCSil?ID=@i.ID" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
                                        </div>
                                    </td>




                                </tr>  }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th width="5%">ID</th>
                                <th width="15%">Ad Soyad</th>
                                <th width="5%">Mail</th>
                                <th width="33%">İşlem</th>

                            </tr>
                        </tfoot>
                    </table>
                    @*--------------content end--------------*@
                </div>
                <p class="text-sm mb-0">

                </p>
            </div>
        </div>

        @*------------card end----------------*@
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="CCEkle" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">CC Mail Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @using (Html.BeginForm("CCEkle", "Mail", FormMethod.Post, new { @class = "form-horizontal", @id = "form_sample_1", @enctype = "multipart/form-data" }))
            {

                <div class="modal-body">
                    <div class="form-group">
                        <label>Ürün Adı:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Ad Soyad" id="Adsoyad" name="Adsoyad">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Ürün Adı:</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-check"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Mail" id="mail" name="mail">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Çık</button>
                    <button type="submit" class="btn btn-primary">Ekle</button>
                </div>
            }
        </div>
    </div>
</div>



@*------------card end----------------*@